require 'rubygems'
require 'trollop'
require 'branches'
require 'branches_setup'

# Command line options
opts = Trollop::options do
  version "branches-setup"
  opt :setup, "Create the base configuration"
  opt :authorized_keys, "Generate the authorized_keys file"
  opt :home, "The home path", :default => File.expand_path('~')
  opt :config_path, "The config path", :default => File.expand_path('~/branches-admin')
  opt :key, "The admin key", :default => ''
end

if opts[:setup]
  Branches::Setup.setup_config_repo(File.join(opts[:home], 'branches-admin'), opts[:key])
end

if opts[:authorized_keys]
  Branches::Setup.generate_authorized_keys(opts[:home], opts[:config_path])
end